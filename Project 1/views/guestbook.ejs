<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Guestbook Entries</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-image: url('/images/yuheng-ouyang-whhbbpyTIBM-unsplash.jpg');
            background-size: cover;
            background-position: center;
            color: white;
        }
        .table-container {
            background-color: rgba(255, 255, 255, 0.9);
            padding: 20px;
            border-radius: 10px;
        }
        .table {
            color: #333;
        }
        h1 {
            color:black;
        }
    </style>
</head>
<body>
    <div class="container my-5 table-container">
        <h1 class="text-center">Guestbook Entries</h1>
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Country</th>
                    <th>Date</th>
                    <th>Message</th>
                </tr>
            </thead>
            <tbody>
                <% messages.forEach(message => { %>
                    <tr>
                        <td><%= message.username %></td>
                        <td><%= message.country %></td>
                        <td><%= message.date %></td>
                        <td><%= message.message %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>
